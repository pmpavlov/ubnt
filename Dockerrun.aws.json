{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "tomcat-app",
      "host": {
        "sourcePath": "/var/app/current/tomcat-app"
      }
    },
    {
      "name": "node-app",
      "host": {
        "sourcePath": "/var/app/current/blog"
      }
    },
    {
      "name": "tomcat-users",
      "host": {
        "sourcePath": "/media/tomcat/tomcat-users.xml"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "node-app",
      "image": "node:0.12",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 4000,
          "containerPort": 4000
        }
      ],
      "command": [
        "/bin/bash",
        "/usr/src/app/run.sh"
      ],
      "mountPoints": [
        {
          "sourceVolume": "node-app",
          "containerPath": "/usr/src/app"
        }
      ]
    },
    {
      "name": "tomcat-app",
      "image": "tomcat:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-tomcat-app",
          "containerPath": "/usr/local/tomcat/logs"
        },
        {
          "sourceVolume": "tomcat-users",
          "containerPath": "/usr/local/tomcat/conf/tomcat-users.xml",
          "readOnly": true
        },
        {
          "sourceVolume": "tomcat-app",
          "containerPath": "/usr/local/tomcat/webapps/ROOT",
          "readOnly": true
        }
      ]
    }
  ]
}

