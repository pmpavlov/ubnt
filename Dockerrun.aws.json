{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "tomcat-app",
      "host": {
        "sourcePath": "/var/app/current/tomcat-app"
      }
    },
    {
      "name": "jenkins-home",
      "host": {
        "sourcePath": "/var/app/current/jenkins-home"
      }
    },
    {
      "name": "tomcat-users",
      "host": {
        "sourcePath": "/media/tomcat/tomcat-users.xml"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "tomcat-app",
      "image": "tomcat:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-tomcat-app",
          "containerPath": "/usr/local/tomcat/logs"
        },
        {
          "sourceVolume": "tomcat-users",
          "containerPath": "/usr/local/tomcat/conf/tomcat-users.xml",
          "readOnly": true
        },
        {
          "sourceVolume": "tomcat-app",
          "containerPath": "/usr/local/tomcat/webapps/ROOT",
          "readOnly": true
        }
      ]
    },
    {
      "name": "jenkins",
      "image": "jenkins:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 8080
        }
      ],
      "links": [
        "tomcat-app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "jenkins-home",
          "containerPath": "/var/jenkins_home"
        }
      ]
    }
  ]
}

